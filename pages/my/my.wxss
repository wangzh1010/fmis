/* pages/my/my.wxss */
.card{
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    width: 94%;
    height: 260rpx;
    color: #fff;
    border-radius: 10rpx;
    /* background-color: #bdbdbd; */
    background: linear-gradient(90deg,#FF7254,#FF5366);
  }
  .card > .date{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    padding: 0 30rpx;
    font-size: 14px;
  }
  .card > .date > text{
    color: #000;
    padding: 0rpx 36rpx;  
    border-radius: 20rpx;
    background-color: #fff;
  }
  .card > .wrap{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    height: 60%;
    font-size: 22rpx;
  }
  
  .card > .wrap > .incoming-and-outgoings{
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    width: 100%;
  }
  
  .card > .wrap text{
    font-weight: bold;
    font-size: 36rpx;
    margin: 0 10rpx;
  }
  .add{
    width: 100rpx;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #bdbdbd;
    border-radius: 100%;
    position: fixed;
    right: 10rpx;
    bottom: 100rpx;
  }
  .add > image{
    width: 80%;
    height: 80%;
  }