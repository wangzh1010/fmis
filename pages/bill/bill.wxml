<view class="container">
    <view class="card">
        <view class="date">
            <picker mode="date" value="{{date}}" fields="year" start="{{start}}" end="{{end}}"
                bindchange="handleDateChange">
                <text>{{date}}</text></picker>
        </view>
        <view class="wrap">
            <view class="surplus">
                结余<text>{{surplus}}</text>元
            </view>
