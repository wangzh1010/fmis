.card {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  width: 94%;
  height: 260rpx;
  color: #fff;
  border-radius: 10rpx;
  background: linear-gradient(90deg, #64b5f6, #1296db);
}

.card>.date {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.card>.date text {
  color: #fff;
  padding: 4rpx 32rpx;
  border-radius: 10rpx;
  background-color: #0088cc;
}

.card>.wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  height: 60%;
  font-size: 22rpx;
}

.card>.wrap>.incoming-and-outgoings {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  width: 100%;
}

.card>.wrap text {
  font-weight: bold;
  font-size: 36rpx;
  margin: 0 10rpx;
}

.details {
  width: 94%;
}

.details>.summary {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 20rpx;
  font-size: 24rpx;
  margin-bottom: 16rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.details>.summary>.wrap {
  display: flex;
  flex-direction: row;
}

.details>.summary>.wrap>view {
  margin-left: 20rpx;
}

.details>.row {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 16rpx;
}

.details .img-wrap {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  background-color: #1296db;
}

.details image {
  width: 64rpx;
  height: 64rpx;
}

.details>.row>.wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: calc(100% - 100rpx);
  height: 80rpx;
  position: relative;
}

.details>.row>.wrap::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 2rpx;
  bottom: -12rpx;
  right: 0;
  background-color: #eeeeee;
}

.add {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #1296db;
  border-radius: 100%;
  position: fixed;
  right: 10rpx;
  bottom: 100rpx;
}

.add>image {
  width: 80%;
  height: 80%;
}